<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="com.epam.employees.entity.Office" table="OFFICE">
		<id name="id" type="long">
			<column name="ID_OFFICE" />
			<generator class="sequence">
				<param name="sequence">OFFICE_ID_SEQ</param>
			</generator>
		</id>
		
		<property name="description" column="DESCRIPTION" type="string" />
		<property name="countOfEmployees" type="int" 
		formula ="(select count(*) from position p where p.FK_ID_OFFICE = ID_OFFICE)" />
		<many-to-one name="adress" column="FK_ID_ADRESS" fetch="join"
						class="com.epam.employees.entity.Adress" not-null="true" />
		<many-to-one name="company" column="FK_ID_COMPANY" fetch="join"
						class="com.epam.employees.entity.Company" not-null="true" />
	</class>
</hibernate-mapping>