<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
	<class name="com.epam.employees.entity.Position" table="POSITION">
		<id name="id" type="long">
			<column name="ID_POSITION" />
			<generator class="sequence">
				<param name="sequence">POSITION_ID_SEQ</param>
			</generator>
		</id>
		
		<property name="name" column="NAME" type="string" />
		<many-to-one name="office" column="FK_ID_OFFICE" fetch="join"
						class="com.epam.employees.entity.Office" not-null="true"/>
<!-- 	<many-to-one name="employee" column="FK_ID_EMPLOYEE" fetch="join"
						class="com.epam.employees.entity.Employee" not-null="true"/>
-->
	</class>
</hibernate-mapping>